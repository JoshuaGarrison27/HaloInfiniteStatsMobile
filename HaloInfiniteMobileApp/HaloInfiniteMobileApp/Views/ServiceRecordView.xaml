                            <Label Grid.Row="2" Grid.Column="1" Text="{Binding Core.Shots.Landed}" TextColor="{StaticResource LightBlue}" HorizontalTextAlignment="Start" />
                            <Label Grid.Row="3" Grid.Column="0" Text="Missed:" TextColor="{StaticResource LightGrey}" HorizontalTextAlignment="End" />
                            <Label Grid.Row="3" Grid.Column="1" Text="{Binding Core.Shots.Missed}" TextColor="{StaticResource LightBlue}" HorizontalTextAlignment="Start" />
                            <Label Grid.Row="4" Grid.Column="0" Text="Accuracy:" TextColor="{StaticResource LightGrey}" HorizontalTextAlignment="End" />
                            <Label Grid.Row="4" Grid.Column="1" Text="{Binding Core.Shots.Accuracy, Converter={StaticResource LocalPercentageConverter}, ConverterParameter=3}" TextColor="{StaticResource LightBlue}" HorizontalTextAlignment="Start" />
                        </Grid>
                    </Frame>
                    <Frame Grid.Row="1" Grid.Column="1" Margin="2" Padding="0" CornerRadius="5" BackgroundColor="{StaticResource HaloInfoGroupBodyBackgroundColor}">
