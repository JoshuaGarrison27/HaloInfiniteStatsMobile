                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="Damage" TextTransform="Uppercase" Style="{StaticResource InfoGroupHeader}"/>
                            <Label Grid.Row="1" Grid.Column="0" Text="Taken:" TextColor="{StaticResource LightGrey}" HorizontalTextAlignment="End"/>
                            <Label Grid.Row="1" Grid.Column="1" Text="{Binding Core.Damage.Taken}" TextColor="{StaticResource LightBlue}" HorizontalTextAlignment="Start" />
                            <Label Grid.Row="2" Grid.Column="0" Text="Dealt:" TextColor="{StaticResource LightGrey}" HorizontalTextAlignment="End" />
                            <Label Grid.Row="2" Grid.Column="1" Text="{Binding Core.Damage.Dealt}" TextColor="{StaticResource LightBlue}" HorizontalTextAlignment="Start" />
                            <Label Grid.Row="3" Grid.Column="0" Text="Average:" TextColor="{StaticResource LightGrey}" HorizontalTextAlignment="End" />
                            <Label Grid.Row="3" Grid.Column="1" Text="{Binding Core.Damage.Average}" TextColor="{StaticResource LightBlue}" HorizontalTextAlignment="Start" />
                        </Grid>
                    </Frame>
                </Grid>
            </StackLayout>
            <ActivityIndicator IsRunning="{Binding Path=IsBusy}" Color="{StaticResource ActivitySpinnerColor}" AbsoluteLayout.LayoutFlags="PositionProportional" AbsoluteLayout.LayoutBounds=".5,.5,-1,-1" />
        </AbsoluteLayout>
    </ContentPage>
