                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="Summary" TextTransform="Uppercase" Style="{StaticResource InfoGroupHeader}"/>
                            <Label Grid.Row="1" Grid.Column="0" Text="Kills:" TextColor="{StaticResource LightGrey}" HorizontalTextAlignment="End"/>
                            <Label Grid.Row="1" Grid.Column="1" Text="{Binding Core.Summary.Kills}" TextColor="{StaticResource LightBlue}" HorizontalTextAlignment="Start" />
                            <Label Grid.Row="2" Grid.Column="0" Text="Assists:" TextColor="{StaticResource LightGrey}" HorizontalTextAlignment="End" />
                            <Label Grid.Row="2" Grid.Column="1" Text="{Binding Core.Summary.Assists}" TextColor="{StaticResource LightBlue}" HorizontalTextAlignment="Start" />
                            <Label Grid.Row="3" Grid.Column="0" Text="Deaths:" TextColor="{StaticResource LightGrey}" HorizontalTextAlignment="End" />
                            <Label Grid.Row="3" Grid.Column="1" Text="{Binding Core.Summary.Deaths}" TextColor="{StaticResource LightBlue}" HorizontalTextAlignment="Start" />
                            <Label Grid.Row="4" Grid.Column="0" Text="K/D Ratio:" TextColor="{StaticResource LightGrey}" HorizontalTextAlignment="End" />
                            <Label Grid.Row="4" Grid.Column="1" Text="{Binding Core.KillDeathRatio, Converter={StaticResource LocalPercentageConverter}, ConverterParameter=3}" TextColor="{StaticResource LightBlue}" HorizontalTextAlignment="Start" />
                        </Grid>
                    </Frame>
                    <Frame Grid.Row="1" Grid.Column="0" Margin="2" Padding="0" CornerRadius="5" BackgroundColor="{StaticResource HaloInfoGroupBodyBackgroundColor}">
