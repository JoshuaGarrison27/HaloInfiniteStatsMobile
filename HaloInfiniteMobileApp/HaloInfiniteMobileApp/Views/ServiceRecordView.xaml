<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HaloInfiniteMobileApp.Views.ServiceRecordView"
             Title="{Binding Title}"
             BackgroundColor="{AppThemeBinding
                                    Light={StaticResource WindowBackgroundColorLight},
                                    Dark={StaticResource WindowBackgroundColorDark}}">
    <ContentPage Title="Social"
             BackgroundColor="{AppThemeBinding
                                    Light={StaticResource WindowBackgroundColorLight},
                                    Dark={StaticResource WindowBackgroundColorDark}}">
        <AbsoluteLayout VerticalOptions="Fill">
            <StackLayout BindingContext="{Binding SocialSR.Data}" AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0,0,1,1">
                <Grid Margin="5" Padding="0" BackgroundColor="Transparent" RowSpacing="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Frame Grid.Row="0" Grid.Column="0" Margin="2" Padding="0" CornerRadius="5" BackgroundColor="{StaticResource HaloInfoGroupBodyBackgroundColor}">
                        <Grid RowSpacing="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="Matches" TextTransform="Uppercase" Style="{StaticResource InfoGroupHeader}"/>
                            <Label Grid.Row="1" Grid.Column="0" Text="Wins:" TextColor="{StaticResource LightGrey}" HorizontalTextAlignment="End"/>
                            <Label Grid.Row="1" Grid.Column="1" Text="{Binding Core.Breakdowns.Matches.Wins}" TextColor="{StaticResource LightBlue}" HorizontalTextAlignment="Start" />
                            <Label Grid.Row="2" Grid.Column="0" Text="Losses:" TextColor="{StaticResource LightGrey}" HorizontalTextAlignment="End" />
                            <Label Grid.Row="2" Grid.Column="1" Text="{Binding Core.Breakdowns.Matches.Losses}" TextColor="{StaticResource LightBlue}" HorizontalTextAlignment="Start" />
                            <Label Grid.Row="3" Grid.Column="0" Text="Left:" TextColor="{StaticResource LightGrey}" HorizontalTextAlignment="End" />
                            <Label Grid.Row="3" Grid.Column="1" Text="{Binding Core.Breakdowns.Matches.Left}" TextColor="{StaticResource LightBlue}" HorizontalTextAlignment="Start" />
                            <Label Grid.Row="4" Grid.Column="0" Text="Draws:" TextColor="{StaticResource LightGrey}" HorizontalTextAlignment="End" />
                            <Label Grid.Row="4" Grid.Column="1" Text="{Binding Core.Breakdowns.Matches.Draws}" TextColor="{StaticResource LightBlue}" HorizontalTextAlignment="Start" />
                        </Grid>
                    </Frame>
                    <Frame Grid.Row="0" Grid.Column="1" Margin="2" Padding="0" CornerRadius="5" BackgroundColor="{StaticResource HaloInfoGroupBodyBackgroundColor}">
