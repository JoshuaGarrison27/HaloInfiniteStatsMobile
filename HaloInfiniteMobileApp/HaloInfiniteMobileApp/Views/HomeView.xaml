<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HaloInfiniteMobileApp.Views.HomeView"
             xmlns:utility="clr-namespace:HaloInfiniteMobileApp.Utility;assembly=HaloInfiniteMobileApp"
             utility:ViewModelLocator.AutoWireViewModel="True"
             Title="Welcome" BackgroundColor="{StaticResource DarkBackgroundColor}" 
             x:Name="HomeViewPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Halo Infinite Stats!"
                    TextColor="WhiteSmoke"
                   FontSize="20"
                   Margin="10"
                    VerticalOptions="Center" 
                    HorizontalOptions="Center" />
            <Image Source="{Binding EmblemUrl, Mode=TwoWay}" Aspect="Fill"></Image>
            <Label Text="{Binding Gamertag}" 
                    TextColor="WhiteSmoke"
                   FontSize="20"
                   Margin="10"
                    VerticalOptions="Center" 
                    HorizontalOptions="Center" />
            <Button Text="Button Test" Command="{Binding TestButton}"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>