                    Margin="0" Padding="10"
                    BackgroundColor="{AppThemeBinding Light={StaticResource CsrsControlBackgroundColorLight},
                                                      Dark={StaticResource CsrsControlBackgroundColorDark}}"
                    CompetitiveSkillRankData="{Binding CsrsData}"
                    CornerRadius="5" InputName="controller" QueueName="solo-duo"
                    RangeName="current" TitleText="Solo-Duo (Controller) - Current" />
