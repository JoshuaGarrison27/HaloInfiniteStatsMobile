<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HaloInfiniteMobileApp.Templates.MenuItemTemplate">
    <ContentView.Content>
        <Grid ColumnSpacing="12" Padding="10, 10, 0, 10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Text="{Binding MenuItemFontAwesomeCode}" Style="{StaticResource MenuIconStyle}"/>
            <Label Grid.Column="1" Text="{Binding MenuText}" Style="{StaticResource MenuTextStyle}"/>
        </Grid>
    </ContentView.Content>
</ContentView>