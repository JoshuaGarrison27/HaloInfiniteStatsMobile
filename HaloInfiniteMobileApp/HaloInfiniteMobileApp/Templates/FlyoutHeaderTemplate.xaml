<?xml version="1.0" encoding="utf-8" ?>
<Grid
    x:Class="HaloInfiniteMobileApp.Templates.FlyoutHeaderTemplate" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Padding="0" HeightRequest="150">

    <Image Aspect="AspectFill" BackgroundColor="{StaticResource WindowBackgroundColorDark}" Source="{Binding PlayerAppearance.PlayerIdentity.EmblemUrl}" />
    <Grid BackgroundColor="{StaticResource WindowBackgroundColorDark}" Opacity="0.8" />
    <Label Style="{StaticResource MenuHeroLabelStyle}" Text="{Binding HeroText}" />

</Grid>